<% include partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title %></div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
		<div class="field">
			<label for="title">Title</label>
			<input type="text" name="blog[title]" value="<%= blog.title %>" id="title">
		</div>
		<div class="field">
			<label for="image">Image</label>
			<input type="text" name="blog[image]" value="<%= blog.image %>" id="image">
		</div>
		<div class="field">
				<label for="body">Blog Content</label>
				<textarea name="blog[body]" id="body"><%- blog.body %></textarea>
		</div>
		<input class="ui violet big basic button" type="submit">
	</form>
</div>

<% include partials/footer %>